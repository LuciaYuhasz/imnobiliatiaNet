@model Usuario
@{
    ViewData["Title"] = "Mi perfil";
}

<h2>ðŸ‘¤ Mi perfil</h2>

<form asp-action="Perfil" method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input name="nombre" class="form-control" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label>ContraseÃ±a (dejar en blanco si no se cambia)</label>
        <input name="clave" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Avatar URL</label>
        <input name="avatarUrl" class="form-control" value="@Model.AvatarUrl" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
</form>
@if (!string.IsNullOrEmpty(Model.AvatarUrl))
{
    <div class="mt-3">
        <label>Vista previa del avatar:</label><br />
        <img src="@Model.AvatarUrl" alt="Avatar" style="max-width:150px; border-radius:8px;" />
    </div>

    <form asp-action="EliminarAvatar" method="post" class="mt-2">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-warning">Eliminar avatar</button>
    </form>
}


}


@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}