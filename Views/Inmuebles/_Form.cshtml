@model imnobiliatiaNet.Models.Inmueble



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <fieldset class="border p-4 rounded shadow text-white" style="background-color: rgba(66, 66, 66, 0.658);">



                <div class="mb-3">
                    <label asp-for="Direccion" class="form-label text-white"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Uso" class="form-label text-white"></label>
                    <select asp-for="Uso" class="form-select">
                        <option value="">-- Seleccione uso --</option>
                        <option value="Residencial">Residencial</option>
                        <option value="Comercial">Comercial</option>
                    </select>
                    <span asp-validation-for="Uso" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tipo" class="form-label text-white"></label>
                    <select asp-for="Tipo" class="form-select">
                        <option value="">-- Seleccione tipo --</option>
                        <option value="Departamento">Departamento</option>
                        <option value="Casa">Casa</option>
                        <option value="PH">PH</option>
                        <option value="Galpón">Galpón</option>
                        <option value="Oficina">Oficina</option>
                        <option value="Local">Local</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Ambientes" class="form-label text-white"></label>
                    <input asp-for="Ambientes" type="number" class="form-control" />
                    <span asp-validation-for="Ambientes" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Precio" class="form-label text-white"></label>
                    <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="Disponible" class="form-check-input" />
                    <label asp-for="Disponible" class="form-check-label text-white"></label>
                </div>

                <div class="mb-3">
                    <label asp-for="Latitud" class="form-label text-white"></label>
                    <input asp-for="Latitud" class="form-control" />
                    <span asp-validation-for="Latitud" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Longitud" class="form-label text-white"></label>
                    <input asp-for="Longitud" class="form-control" />
                    <span asp-validation-for="Longitud" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PropietarioId" class="form-label text-white"></label>
                    <select asp-for="PropietarioId" class="form-select">
                        <option value="">-- Seleccione propietario --</option>
                        @foreach (var p in ViewBag.Propietarios)
                        {
                            <option value="@p.Id">@p.Apellido, @p.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="PropietarioId" class="text-danger"></span>
                </div>


            </fieldset>
        </div>
    </div>
</div>