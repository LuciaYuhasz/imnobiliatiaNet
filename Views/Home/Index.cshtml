@{
    ViewData["Title"] = "Bienvenidos a Inmobiliaria NET";
}

<style>
    body {
        background: url('/img/imb2.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .welcome-section {
        padding: 100px 0;
        text-align: center;
        color: #fff;
    }

    .welcome-section h1 {
        font-size: 4rem;
        font-weight: bold;
        text-shadow: 2px 2px 4px #000;
    }

    .welcome-section p {
        font-size: 1.5rem;
        margin-bottom: 30px;
        text-shadow: 1px 1px 2px #000;
    }

    .btn-login {
        font-size: 1.2rem;
        padding: 12px 30px;
        border-radius: 30px;
    }
</style>

<div class="container welcome-section">
    <h1>🏡 Bienvenidos a Inmobiliaria NET</h1>
    <p>Tu espacio digital para gestionar propiedades, contratos e inquilinos.</p>
    <a asp-controller="Auth" asp-action="Login" class="btn btn-light btn-login">Ingresar al sistema</a>
</div>
