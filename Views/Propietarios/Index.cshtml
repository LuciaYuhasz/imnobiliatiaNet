@model IEnumerable<imnobiliatiaNet.Models.Propietario>
@{
    ViewData["Title"] = "Propietarios";
}

<h1>Propietarios</h1>

<form method="get" class="mb-3">
    <input name="q" class="form-control" placeholder="Buscar por DNI / Nombre / Apellido" value="@Context.Request.Query["q"]" />
</form>

<p>
    <a class="btn btn-primary" asp-action="Crear">Nuevo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var p in Model)
{
        <tr>
            <td>@p.Dni</td>
            <td>@p.Apellido</td>
            <td>@p.Nombre</td>
            <td>@p.Telefono</td>
            <td>@p.Email</td>
            <td class="text-end">
                <a class="btn btn-sm btn-secondary" asp-action="Detalle" asp-route-id="@p.Id">Ver</a>
                <a class="btn btn-sm btn-warning" asp-action="Editar" asp-route-id="@p.Id">Editar</a>
                <form asp-action="Borrar" asp-route-id="@p.Id" method="post" style="display:inline">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('¿Borrar?')">Borrar</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
