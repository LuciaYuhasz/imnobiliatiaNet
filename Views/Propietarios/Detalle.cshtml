@model imnobiliatiaNet.Models.Propietario
@{
    ViewData["Title"] = "Detalle del Propietario";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="col-md-8">

        <h1 class="text-center mb-5 display-4 fw-semibold text-shadow title-highlight">👤 Detalle del Propietario</h1>

        <div class="card shadow-lg bg-glass">
            <div class="card-body">
                <dl class="row fs-5">
                    <dt class="col-sm-4 fw-bold">🆔 DNI</dt>
                    <dd class="col-sm-8">@Model.Dni</dd>

                    <dt class="col-sm-4 fw-bold">🧑 Apellido</dt>
                    <dd class="col-sm-8">@Model.Apellido</dd>

                    <dt class="col-sm-4 fw-bold">👨 Nombre</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>

                    <dt class="col-sm-4 fw-bold">📞 Teléfono</dt>
                    <dd class="col-sm-8">@Model.Telefono</dd>

                    <dt class="col-sm-4 fw-bold">📧 Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                </dl>
            </div>
        </div>

        <div class="text-center mt-4">
            <a class="btn btn-warning me-2 px-4 py-2" asp-action="Editar" asp-route-id="@Model.Id">✏️ Editar</a>
            <a class="btn btn-secondary px-4 py-2" asp-action="Index">↩️ Volver</a>
        </div>
    </div>
</div>
