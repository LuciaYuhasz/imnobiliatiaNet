@model IList<Usuario>
@{
    ViewData["Title"] = "GestiÃ³n de usuarios";
}

<h2>ðŸ‘¥ Usuarios del sistema</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nombre</td>
                <td>@u.Email</td>
                <td>@u.Rol</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-primary">Editar</a>
                    @if (u.Id != Context.Session.GetInt32("UsuarioId"))
                    {
                        <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

