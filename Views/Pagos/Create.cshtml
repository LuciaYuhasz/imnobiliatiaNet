@model imnobiliatiaNet.Models.Pago
@{
    ViewData["Title"] = "Nuevo Pago";
}

<h2>Nuevo Pago</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="ContratoId" />
    <div class="form-group">
        <label asp-for="NumeroPago"></label>
        <input asp-for="NumeroPago" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaPago"></label>
        <input asp-for="FechaPago" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Concepto"></label>
        <input asp-for="Concepto" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Importe"></label>
        <input asp-for="Importe" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" asp-route-contratoId="@Model.ContratoId" class="btn btn-secondary">Volver</a>
</form>
