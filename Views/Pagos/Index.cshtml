@model IEnumerable<imnobiliatiaNet.Models.Pago>
@{
    ViewData["Title"] = "Pagos del Contrato";
    var contrato = ViewBag.Contrato as imnobiliatiaNet.Models.Contrato;
}
<p class="text-muted">Mostrando @Model.Count() pagos en esta p√°gina.</p>


<div class="container mt-5">
    <div class="col-md-10 mx-auto">

        <h1 class="text-center mb-4 display-5 fw-semibold text-shadow title-highlight">üí≥ Pagos del Contrato</h1>

        <div class="card shadow-lg bg-glass mb-4">
            <div class="card-body fs-5">
                <p><strong>üìÑ Contrato:</strong> #@contrato?.Id</p>
                <p><strong>üßë‚Äçüíº Inquilino:</strong> @contrato?.Inquilino?.Apellido @contrato?.Inquilino?.Nombre</p>
                <p><strong>üè† Inmueble:</strong> @contrato?.Inmueble?.Direccion - @contrato?.Inmueble?.Tipo</p>
            </div>
        </div>

        <div class="text-end mb-3">
            <a asp-action="Create" asp-route-contratoId="@contrato?.Id" class="btn btn-primary px-4 py-2">‚ûï Nuevo
                Pago</a>
        </div>

        <div class="card shadow-sm bg-glass">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>üìÖ Fecha</th>
                            <th>üìù Concepto</th>
                            <th>üí∞ Importe</th>
                            <th>üìå Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr class="@(p.Anulado ? "table-danger" : "")">
                                <td>@p.NumeroPago</td>
                                <td>@p.FechaPago.ToString("dd/MM/yyyy")</td>
                                <td>@p.Concepto</td>
                                <td>@p.Importe.ToString("C")</td>
                                <td>
                                    @if (p.Anulado)
                                    {
                                        <span class="badge bg-danger">Anulado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info me-1">üîç
                                        Detalles</a>

                                    @if (!p.Anulado)
                                    {
                                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning me-1">‚úèÔ∏è
                                            Editar</a>
                                        <a asp-action="Anular" asp-route-id="@p.Id" class="btn btn-sm btn-danger">üóëÔ∏è Anular</a>
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= (int)ViewBag.TotalPaginas; i++)
                        {
                            <li class="page-item @(i == (int)ViewBag.Pagina ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-contratoId="@ViewBag.ContratoId"
                                    asp-route-pagina="@i">
                                    @i
                                </a>
                            </li>
                        }
                    </ul>
                </nav>

            </div>
        </div>

    </div>
</div>