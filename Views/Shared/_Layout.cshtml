<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - imnobiliatiaNet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/imnobiliatiaNet.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">imnobiliatiaNet</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Propietarios"
                                asp-action="Index">Propietarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Inquilinos" asp-action="Index">Inquilinos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Contratos" asp-action="Index">Contratos</a>
                        </li>

                    </ul>

                    @* Bloque de usuario logueado *@
                    @{
                        var nombre = Context.Session.GetString("UsuarioNombre");
                        var avatar = Context.Session.GetString("UsuarioAvatar");
                        var rol = Context.Session.GetString("UsuarioRol");
                    }

                    @if (!string.IsNullOrEmpty(nombre))
                    {
                        <div class="d-flex align-items-center">
                            <img src="@(!string.IsNullOrEmpty(avatar) ? avatar : "/img/default-avatar.png")" alt="Avatar"
                                style="width:40px; height:40px; border-radius:50%; margin-right:10px;" />
                            <span class="me-3">@nombre (@rol)</span>
                            <a asp-controller="Home" asp-action="Panel"
                                class="btn btn-outline-primary btn-sm me-2">Panel</a>

                            <a asp-controller="Auth" asp-action="Perfil" class="btn btn-outline-secondary btn-sm me-2">Mi
                                perfil</a>
                            <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-danger btn-sm">Cerrar
                                sesión</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - imnobiliatiaNet - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>