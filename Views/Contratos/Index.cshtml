@model IEnumerable<imnobiliatiaNet.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<h2>Contratos</h2>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center fw-semibold">
        @TempData["Error"]
    </div>
}
@if (TempData["Exito"] != null)
{
    <div class="alert alert-success text-center fw-semibold">
        @TempData["Exito"]
    </div>
}

<p class="text-muted">Mostrando @Model.Count() contratos en esta p√°gina.</p>

<form method="get" class="mb-3">
    <input name="filtro" class="form-control" placeholder="Buscar por inquilino o direcci√≥n" value="@ViewBag.Filtro" />
</form>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo Contrato</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Inmueble</th>
            <th>Inquilino</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Inmueble?.Direccion</td>
                <td>@item.Inquilino?.Nombre</td>
                <td>@item.FechaInicio.ToShortDateString()</td>
                <td>@item.FechaFin.ToShortDateString()</td>
                <td>@item.Monto</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="btn btn-sm btn-outline-primary" asp-action="Renovar" asp-route-id="@item.Id">
                        üîÅ Renovar
                    </a>


                    <a class="btn btn-sm btn-danger" asp-action="Terminar" asp-route-id="@item.Id">üõë Terminar</a>


                    <a class="btn btn-sm btn-outline-dark" asp-controller="Pagos" asp-action="Index"
                        asp-route-contratoId="@item.Id">
                        <i class="bi bi-cash-coin"></i> Pagos
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
<nav class="mt-4">
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= (int)ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == (int)ViewBag.Pagina ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pagina="@i" asp-route-filtro="@ViewBag.Filtro">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>